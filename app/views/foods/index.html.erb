<div class="button d-flex">
	<button class="butt">
    <%= link_to "Add Food", new_food_path %>
  </button>
</div>
<div class="food-container d-flex j-center">
<table>
<tr class="head">
 <th><h3>Food</h3></th>
 <th><h3>Measurement unit</h3></th>
 <th><h3>Unit price</h3></th>
 <th><h3>Actions</h3></th>
</tr>
<% @food.each do |food|%>
<tr> 
	<td><h3><%= food.name%></h3></td>
	<td><h3><%= food.measurement_unit%></h3></td>
	<td><h3><%= food.price%></h3></td>
	<td><%= button_to "Delete", food_path(food.id), method: :delete, class: "submit" %></td>
	</tr>
	<%end%>
	</table>
</div>
