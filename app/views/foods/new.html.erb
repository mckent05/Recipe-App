<h1 class='d-flex a-center j-center'>Add Food</h1>

<%=form_with url: foods_path, scope: :data do |f| %>
    <div class="form-group">
        <%= f.label :name, "Name:" %>
        <%= f.text_field :name, required: true, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :measurement_unit, "measurement_unit:" %>
        <%= f.text_field :measurement_unit, required: true, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :price, "price:" %>
        <%= f.text_field :price, required: true, class: "form-control" %>
    </div>

    <div class="form-group">
        <%=f.submit "Submit", class: "submit-button" %>
    </div>

<% end %>
